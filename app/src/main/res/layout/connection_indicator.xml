<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_connect_indicator"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/connect_indicator_margin"
    android:layout_marginTop="@dimen/connect_indicator_margin"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/connection_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/connection_indicator"
        android:src="@drawable/ic_error_black_24dp"
        android:tint="@color/warning" />

    <TextView
        android:id="@+id/connection_message"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/connect_indicator_margin"
        android:gravity="center_vertical|end"
        android:text="@string/disconnected" />
</LinearLayout>
